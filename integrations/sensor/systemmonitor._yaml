  - platform: systemmonitor
    resources:
      - type: last_boot
      - type: processor_use
      - type: processor_temperature
      - type: load_1m
      - type: load_5m
      - type: load_15m
      - type: disk_use_percent
        arg: /home
      - type: memory_use
      - type: memory_free
      - type: memory_use_percent
      - type: swap_use
      - type: swap_free
      - type: swap_use_percent
